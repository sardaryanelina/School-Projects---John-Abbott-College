{% extends "master.html.twig" %}

{% block title %}landing
{% endblock %}

{% block content %}
<div class="row black">
    <div style="width:180px;" class="anim">
        <img id="logo" src="/images/logo_astronaut.png" alt="astronaut" style="position:absolute; top:12vh; right:1vh;">
    </div>
    <div class="right col l8 m10 s12">
        <img class="responsive-img" src="/images/earth.jpg" alt="dragon">
    </div>
    <div class="col s12" style="position:absolute; top:24vh; left:8vh; width: 80%;">
        <div class="row">
            <div class="col s12" style="margin: 0;">
                <h2 class="white-text flow-text" style="font-weight:bold; font-size: 4.8vw; margin:0;">
                    Book
                    your
                    training</h2>
            </div>
            <div class="col s12">
                <h4 class="white-text flow-text" style="font-weight: 200; font-size: 3.6vw;  margin:0;">
                    Open
                    space for
                    everyone</h4>
            </div>
            <div class="col s12">
                <h2 class="white-text flow-text"
                    style="font-weight: 200; font-size: 2.18vw; margin:0; margin-top:1.2vw; margin-bottom: 1.2vw; word-spacing: 0.2vw;">
                    The
                    Dragon spacecraft is
                    capable of <br />carrying up to seven passengers to <br />Earth orbit and
                    is the first spacecraft <br />to take humans to the space station.
                </h2>
            </div>
        </div>
        <p class="left-align"><a href="/booking"><input class="btn btn-large waves-effect waves-light" type="submit"
                    name="action" value="Book now!" /></a></p>
    </div>
</div>
<div class="row">
    <div class="col s12 ">
        <h2 class="center-align white-text flow-text " style=" font-size:5vw;">NASA SpaceX Crew Dragon Launch.
        </h2>
        <img class="responsive-img" src="/images/DR_4.jpg" alt="starship" style="width: 100%;">
        <div class="video-container">
            <iframe width="100%" src="https://www.youtube.com/embed/1gmvUPTdoP4" frameborder="0"
                allowfullscreen></iframe>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 ">
        <h2 class="center-align white-text flow-text " style=" font-size:5vw;"></h2> Learn more about <a
            class="teal-text" href="/dragon">Dragon</a>
        </h2>
        <img class="responsive-img" src="/images/DR_8.jpg" alt="starship" style="width: 100%;">
    </div>
</div>

<div class="row " style="margin-top: 5rem;">
    <div class="col s12 ">
        <h2 class="center-align white-text flow-text " style=" font-size:5vw;"><a class="teal-text"
                href="/starship">Starship</a> launch in South Texas.
        </h2>
        <div class="col s12">
            <img class="responsive-img" src="/images/STR_4.jpg" alt=" dragon" style="width: 100%;">
        </div>
    </div>
</div>
<div class="row ">
    <div class="col s12 ">
        <div class="video-container ">
            <iframe width="100%" src="https://www.youtube.com/embed/C8JyvzU0CXU" frameborder="0"
                allowfullscreen></iframe>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 ">
        <h2 class="center-align white-text flow-text " style=" font-size:5vw;">Book your training <a class="teal-text"
                href="/booking">here</a>
        </h2>
        <img class="responsive-img" src="/images/STR_6.jpg" alt="starship" style="width: 100%;">
    </div>
</div>

{% endblock %}